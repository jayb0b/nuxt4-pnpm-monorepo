{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run ESLint",
      "type": "shell",
      "command": "npx eslint --fix .",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$eslint-stylish"],
      "detail": "Run ESLint with automatic fixes"
    },
    {
      "label": "Run Prettier",
      "type": "shell",
      "command": "npx prettier --write .",
      "group": "build",
      "detail": "Run Prettier to format the code"
    }
  ]
}
